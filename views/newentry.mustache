<html lang="en">
<head>
{{>header}}
</head>
<body class="container">
<h2>Write a new entry</h2>
<form method="post" role="form">
  <div class="form-group">
    <label for="author">Author</label>
    <input type="text" class="form-control" id="author"
           name="author" placeholder="Written by" required>
  </div>
  <div class="form-group">
    <label for="activityGoal">Activity Goal</label>
    <input type="text" class="form-control" id="activityGoal"
           name="activityGoal" placeholder="Enter a subject line"
required>
  </div>
  <div class="form-group">
    <label for="contents">Entry text</label>
    <textarea class="form-control" id="contents" name="contents"
              placeholder="Enter your comments here." rows="3"
required>
    </textarea>
  </div>
  <div class="form-group">
    <input type="submit" value="Post entry" class="btn btn-primary">
  </div>
</form>
</body>
</html>
